# AgBlogger environment configuration
# Copy to .env and update values for your environment

# Secret key for JWT token signing (generate a random string for production)
SECRET_KEY=change-me-in-production

# Database URL
DATABASE_URL=sqlite+aiosqlite:///data/db/agblogger.db

# Content directory (where markdown posts and config files live)
CONTENT_DIR=./content

# Frontend build directory
FRONTEND_DIR=./frontend/dist

# Initial admin account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Auth hardening
AUTH_SELF_REGISTRATION=false
AUTH_INVITES_ENABLED=true
AUTH_INVITE_EXPIRE_DAYS=7
AUTH_LOGIN_MAX_FAILURES=5
AUTH_REFRESH_MAX_FAILURES=10
AUTH_RATE_LIMIT_WINDOW_SECONDS=300

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ── Cross-posting credentials (optional) ────────────────────────────

# X (Twitter)
# X_API_KEY=
# X_API_SECRET=
# X_ACCESS_TOKEN=
# X_ACCESS_TOKEN_SECRET=

# Bluesky
# BLUESKY_HANDLE=
# BLUESKY_APP_PASSWORD=

# Mastodon
# MASTODON_INSTANCE_URL=https://mastodon.social
# MASTODON_ACCESS_TOKEN=

# Facebook
# FACEBOOK_PAGE_ID=
# FACEBOOK_PAGE_ACCESS_TOKEN=

# LinkedIn
# LINKEDIN_ACCESS_TOKEN=
